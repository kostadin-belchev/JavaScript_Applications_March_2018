 {{> header}}
<div class="content">
    {{#if user.isAuthenticated}}
        {{> navigation}}
    {{/if}}
    <section id="viewComments">
        <div class="post">
            <div class="col thumbnail">
                <a href="{{post.url}}">
                    <img src="{{post.imageUrl}}">
                </a>
            </div>
            <div class="post-content">
                <div class="title">
                    <a href="{{post.url}}">
                        {{post.title}}
                    </a>
                </div>
                <div class="details">
                    {{#if post.description}}
                    <p>{{post.description}}</p>
                    {{else}}
                    <p style="font-style: italic">No description.</p>
                    {{/if}}
                    <div class="info">
                        submitted {{post.timeSinceSubmit}} ago by {{post.author}}
                    </div>
                    <div class="controls">
                        <ul>
                            {{#if post.isEditable}}
                            <li class="action">
                                <a class="editLink" href="#" onclick="loadEditPost('{{post._id}}')">edit</a>
                            </li>
                            <li class="action">
                                <a class="deleteLink" href="#" onclick="deletePost('{{post._id}}')">delete</a>
                            </li>
                            {{/if}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="post post-content">
            <form id="commentForm" data-id="{{post._id}}">
                <label>Comment</label>
                <textarea name="content" type="text"></textarea>
                <input type="submit" value="Add Comment" id="btnPostComment" onclick="addComment(event)">
            </form>
        </div>
        {{#each comments}}
            {{> comment}}
        {{else}}
            <p style="font-style: italic">No comments yet.</p>
        {{/each}}
    </section>
</div>
{{> footer}}