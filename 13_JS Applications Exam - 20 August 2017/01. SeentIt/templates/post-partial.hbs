<article class="post">
    <div class="col rank">
        <span>{{rank}}</span>
    </div>
    <div class="col thumbnail">
        <a href="{{url}}">
            <img src="{{imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{url}}">
                {{title}}
            </a>
        </div>
        <div class="details">
            <div class="info">
                submitted {{time}} ago by {{author}}
            </div>
            <div class="controls">
                <ul>
                    <li class="action">
                        <a class="commentsLink" href="#" onclick="listCommentsForPost({{_id}})">comments</a>
                    </li>
                    {{#if isEditablePost}}
                    <li class="action">
                        <a class="editLink" href="#" onclick="editPost('{{_id}}')">edit</a>
                    </li>
                    <li class="action">
                        <a class="deleteLink" href="#" onclick="deletePost('{{_id}}')">delete</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </div>
</article>