 {{> header}}
<main>
    <section id="viewSendMessage">
        <h1>Send Message</h1>
        <form id="formSendMessage">
            <div>Recipient:</div>
            <div>
                <select name="recipient" required id="msgRecipientUsername">
                    {{#each users}}
                    <option value="{{username}}">{{formattedName}}</option>
                    {{/each}}
                </select>
            </div>
            <div>Message Text:</div>
            <div>
                <input type="text" name="text" required id="msgText" />
            </div>
            <div>
                <input type="submit" value="Send" onclick="sendMessage(event)"/>
            </div>
        </form>
    </section>
</main>
{{> footer}}