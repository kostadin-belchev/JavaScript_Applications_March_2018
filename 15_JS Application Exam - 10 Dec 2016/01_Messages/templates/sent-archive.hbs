 {{> header}}
<main>
    <section id="viewArchiveSent">
        <h1>Archive (Sent Messages)</h1>
        <div class="messages" id="sentMessages">
            <table>
                <thead>
                    <tr>
                        <th>To</th>
                        <th>Message</th>
                        <th>Date Sent</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each sentMessages}}
                    <tr>
                        <td>{{recipient_username}}</td>
                        <td>{{text}}</td>
                        <td>{{date}}</td>
                        <td>
                            <button onclick="deleteMessage('{{_id}}')">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </section>
</main>
{{> footer}}